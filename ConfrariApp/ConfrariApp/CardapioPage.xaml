<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConfrariApp.CardapioPage"
             BackgroundImage="backgroundConfrariApp2">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cardápio"
                   HorizontalTextAlignment="Center"
                   BackgroundColor="Black"
                   FontAttributes="Bold"
                   TextColor="White">
            </Label>

            <Label Text="Bebidas"
                   FontSize="18"
                   FontAttributes="Italic"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   Margin="0,30,0,0"/>
           
            <Label Text="Porções"
                   FontSize="18"
                   FontAttributes="Italic"
                   HorizontalTextAlignment="Center"
                   TextColor="White"/>
            <Label Text="Suvenirs"
                   FontSize="18"
                   FontAttributes="Italic"
                   HorizontalTextAlignment="Center"
                   TextColor="White"/>
            


        </StackLayout>
    </ContentPage.Content>
</ContentPage>