<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConfrariApp.Reservas"
             BackgroundImage ="backgroundConfrariApp"
             >
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Atualizar" 
                                      x:Name="AtualizarReserva"                                           
                                      CommandParameter="{Binding .}" 
                                      IsDestructive="False" 
                                          Clicked="AtualizarReserva_Clicked"/>
                                <MenuItem Text="Apagar" 
                                      x:Name="ApagarReserva" 
                                      CommandParameter="{Binding .}" 
                                      IsDestructive="True"
                                          Clicked="ApagarReserva_Clicked"/>
                            </ViewCell.ContextActions>


                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <Label  Grid.Column="0" Text="{Binding nomeCliente}" TextColor="Black"/>
                                <Label  Grid.Column="1" Text="{Binding qtdpessoas}" TextColor="Black"/>
                                <Label  Grid.Column="2" Text="{Binding data}" TextColor="Black"/>
                                <Label Grid.Column="3" Text="{Binding observacao}" TextColor="Black"/>



                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Adicionar" 
                    x:Name="buttonAdicionarReserva"
                     HorizontalOptions="Fill"
                    BackgroundColor="#800B03"
                    Margin="20,10,20,50"
                    Opacity="30"
                    TextColor="White"
                    FontAttributes="Bold"
                    BorderRadius="10"
                    Clicked="ButtonAdicionarReserva_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>